<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-bottom bg-light">
  <div class="container-fluid">
    <%= link_to "Air BnB", flats_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Add a new flat", new_flat_path, class: "btn btn-dark text-light" %>
          </li>
      </ul>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="container">
    <div class="row">
      <h1 class="border-bottom">All our flats</h1>
    </div>
    <div class="row">
      <h3 class="mt-3">All <%= @flats_number %> flats</h3>
    </div>
    <div class="row">
      <%# <div class="col-12 col-sm-6"> %>
        <% @flats.each do |flat| %>
          <div class="col-md-3">
            <div class="card-trip mb-4">
              <img src="http://source.unsplash.com/featured/house" />
              <div class="card-trip-infos">
                <div>
                  <h2><%= link_to(flat.name, flat_path(flat))%></h2>
                  <p class="mt-2 p-1"><%= flat.address %></p>
                  <div class="flex align-items-center">
                    <i class="fa-solid fa-people-line"></i>
                    <span><%= flat.number_of_guests %></span>
                  </div>
                  <div class="flex align-items-center">
                    <i class="fa-sharp fa-solid fa-sterling-sign"></i>
                    <span><%= flat.price_per_night %> per night</span>
                  </div>
                  <div class="d-inline-flex">
                    <h6><%= link_to "More Info", flat_path(flat), class: "btn btn-dark text-light mt-3 p-2 ms-1" %></h6>
                    <h6><%= link_to "Edit flat", edit_flat_path(flat), class: "btn btn-dark text-light mt-3 p-2 ms-1" %></h6>
                    <h6><%= link_to "Delete flat", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger text-light mt-3 p-2 ms-1" %></h6>
                  </div>
                </div>
                <%# <h3 class="card-trip-pricing">STAY HERE!</h3> %>
                <%# <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> %>
              </div>
            </div>
          </div>
        <% end %>
      <%# </div> %>
    </div >
  </div>
</div>
